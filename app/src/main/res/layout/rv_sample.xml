<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/box_list_ver_tx_margin"
        android:layout_marginVertical="5dp"
        android:background="@drawable/box_list_shape_round"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/box_list_ver_tx_margin">


        <TextView
            android:id="@+id/rv_sample_lb_no_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지시 번호"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/rv_sample_lb_dt_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
            android:text="지시 일자"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/rv_sample_lb_no_io"
            app:layout_constraintStart_toStartOf="@id/rv_sample_lb_no_io"
            app:layout_constraintTop_toBottomOf="@id/rv_sample_lb_no_io" />

        <TextView
            android:id="@+id/rv_sample_lb_cd_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
            android:text="창고"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/rv_sample_lb_no_io"
            app:layout_constraintStart_toStartOf="@id/rv_sample_lb_no_io"
            app:layout_constraintTop_toBottomOf="@id/rv_sample_lb_dt_io" />

        <TextView
            android:id="@+id/rv_sample_lb_nm_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
            android:text="지시자"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/rv_sample_lb_no_io"
            app:layout_constraintStart_toStartOf="@id/rv_sample_lb_no_io"
            app:layout_constraintTop_toBottomOf="@id/rv_sample_lb_cd_plant" />

        <TextView
            android:id="@+id/rv_sample_lb_dc_rmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
            android:text="비고"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/rv_sample_lb_no_io"
            app:layout_constraintStart_toStartOf="@id/rv_sample_lb_no_io"
            app:layout_constraintTop_toTopOf="@+id/rv_sample_tx_dc_rmk"
            app:layout_constraintBottom_toBottomOf="@+id/rv_sample_tx_dc_rmk"
            />

        <TextView
            android:id="@+id/rv_sample_tx_no_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TG0202230300007"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rv_sample_lb_no_io"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_sample_lb_no_io" />

        <TextView
            android:id="@+id/rv_sample_tx_dt_io"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20230321"
            android:textColor="@color/black"
            android:maxLength="15"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/rv_sample_lb_dt_io"
            app:layout_constraintEnd_toEndOf="@+id/rv_sample_tx_no_io"
            app:layout_constraintStart_toStartOf="@+id/rv_sample_tx_no_io"
            app:layout_constraintTop_toTopOf="@+id/rv_sample_lb_dt_io" />

        <TextView
            android:id="@+id/rv_sample_tx_cd_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rv_sample_lb_cd_plant"
            app:layout_constraintEnd_toEndOf="@+id/rv_sample_tx_no_io"
            app:layout_constraintStart_toStartOf="@+id/rv_sample_tx_no_io"
            app:layout_constraintTop_toTopOf="@+id/rv_sample_lb_cd_plant" />

        <TextView
            android:id="@+id/rv_sample_tx_nm_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김상이"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rv_sample_lb_nm_kor"
            app:layout_constraintEnd_toEndOf="@+id/rv_sample_tx_cd_plant"
            app:layout_constraintStart_toStartOf="@+id/rv_sample_tx_cd_plant"
            app:layout_constraintTop_toTopOf="@+id/rv_sample_lb_nm_kor" />

        <TextView
            android:id="@+id/rv_sample_tx_dc_rmk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="해외영업팀샘플(고범준책임)"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rv_sample_tx_cd_plant"
            app:layout_constraintStart_toStartOf="@+id/rv_sample_tx_cd_plant"
            app:layout_constraintTop_toBottomOf="@+id/rv_sample_tx_nm_kor" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>