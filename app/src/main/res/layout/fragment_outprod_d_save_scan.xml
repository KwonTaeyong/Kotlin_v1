<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.outprodD.outprodDSaveScanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/outprodDSaveScan_home_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingVertical="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/outprodDSaveScan_reset_btn"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:paddingVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_btn_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:background="@drawable/house_solid2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/reset_btn_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:background="@drawable/reset_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/outprodDSaveScan_tx_rack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="렉 스캔"
            android:textColor="@color/white"
            android:textSize="@dimen/h5"
            android:fontFamily="@font/nanumsquareneo_deb"
            app:layout_constraintEnd_toStartOf="@+id/reset_btn_img"
            app:layout_constraintStart_toEndOf="@+id/home_btn_img"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/outprodDSaveScan_ed_scan"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"/>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outprodDSaveScan_ly_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/table_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar">

        <TextView
            android:id="@+id/outprodDSaveScan_txlb_cdItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="품목 코드"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareneo_deb"
            app:layout_constraintEnd_toStartOf="@+id/outprodDSaveScan_tx_cdItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/outprodDSaveScan_tx_cdItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/box_shape_input_label"
            android:fontFamily="@font/nanumsquareneo_deb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/outprodDSaveScan_txlb_cdItem"
            app:layout_constraintBottom_toBottomOf="@+id/outprodDSaveScan_txlb_cdItem"
            app:layout_constraintHorizontal_bias="0.9"/>

        <TextView
            android:id="@+id/outprodDSaveScan_txlb_nmItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="품목 명"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareneo_deb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/outprodDSaveScan_tx_nmItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/outprodDSaveScan_txlb_cdItem"/>

        <TextView
            android:id="@+id/outprodDSaveScan_tx_nmItem"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/box_shape_input_label"
            android:fontFamily="@font/nanumsquareneo_deb"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/outprodDSaveScan_txlb_nmItem"
            app:layout_constraintBottom_toBottomOf="@+id/outprodDSaveScan_txlb_nmItem"
            app:layout_constraintHorizontal_bias="0.9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outprodDSaveScan_ly_qt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:background="@drawable/table_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outprodDSaveScan_ly_item"
        >

        <TextView
            android:id="@+id/outprodDSaveScan_txlb_qt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareneo_deb"
            android:text="수량"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/outprodDSaveScan_tx_qt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/outprodDSaveScan_tx_qt"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/box_shape_input_label"
            android:gravity="center"
            android:text=""
            android:inputType="number"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


