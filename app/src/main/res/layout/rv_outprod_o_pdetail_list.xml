<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/box_list_ver_tx_margin"
        android:layout_marginVertical="5dp"
        android:background="@drawable/box_list_shape_round"
        android:clickable="true"
        android:focusable="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.3"

            >

            <TextView
                android:id="@+id/Pdetail_no_so"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수주 번호"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/Pdetail_dt_io"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
                android:text="PMS"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/Pdetail_no_so"
                app:layout_constraintStart_toStartOf="@+id/Pdetail_no_so"
                app:layout_constraintTop_toBottomOf="@+id/Pdetail_no_so"
                />


            <TextView
                android:id="@+id/Pdetail_no_io"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/box_list_ver_tx_margin"
                android:text="CASE"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/Pdetail_dt_io"
                app:layout_constraintStart_toStartOf="@id/Pdetail_dt_io"
                app:layout_constraintTop_toBottomOf="@id/Pdetail_dt_io" />

            <TextView
                android:id="@+id/Pdetail_tx_no_so"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOZ20220300396"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/Pdetail_no_so"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Pdetail_no_so"
                />

            <TextView
                android:id="@+id/Pdetail_tx_p_pvlhcase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PMS20230101"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/Pdetail_dt_io"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Pdetail_dt_io"
                />

            <TextView
                android:id="@+id/Pdetail_tx_cd_lc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@color/black"
                android:maxLength="15"
                android:ellipsize="end"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/Pdetail_no_io"
                app:layout_constraintEnd_toEndOf="@+id/Pdetail_tx_p_pvlhcase"
                app:layout_constraintStart_toStartOf="@+id/Pdetail_tx_p_pvlhcase"
                app:layout_constraintTop_toTopOf="@+id/Pdetail_no_io" />


        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <Button
                android:id="@+id/rv_outprod_o_add_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_add_box_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>